
@{
    ViewData["Title"] = "AddProject";
}
@model TravelApp.Web.Admin.Models.Project.EditProjectViewModel;
@section Scripts{
    <script src="~/view-resources/Views/Project/addproject.js" asp-append-version="true"></script>
}
<div class="x-body">
    <form class="layui-form layui-form-pane">
        <input type="hidden" id="Id" name="Id" value="@Model.Project.Id" />
        <div class="layui-form-item">
            <label for="Name" class="layui-form-label">
                <span class="x-red">*</span>线路名称
            </label>
            <div class="layui-input-block">
                <input type="text" id="Name" name="Name" required="" lay-verify="required"
                       autocomplete="off" class="layui-input" value="@Model.Project.Name">
            </div>
        </div>
        <div class="layui-form-item">
            <label for="CategoryId" class="layui-form-label">
                <span class="x-red">*</span>线路分类
            </label>
            <div class="layui-input-inline">
                <input type="text" id="CategoryId" value="@Model.Project.CategoryId" lay-filter="CategoryId" name="CategoryId" class="layui-input">
            </div>
            <label for="Price" class="layui-form-label">
                <span class="x-red">*</span>线路价格
            </label>
            <div class="layui-input-inline">
                <input type="text" id="Price" name="Price" required="" lay-verify="required"
                       autocomplete="off" class="layui-input" value="@Model.Project.Price">
            </div>
            <label for="StartDate" class="layui-form-label">
                <span class="x-red">*</span>发团日期
            </label>
            <div class="layui-input-inline">
                <input type="text" id="StartDate" name="StartDate" required="" lay-verify="required" class="layui-input" value="@Model.Project.StartDate">
            </div>
        </div>
        <div class="layui-form-item layui-form-text">
            <label for="Describe" class="layui-form-label">
                线路简介
            </label>
            <div class="layui-input-block">
                <textarea placeholder="请输入内容" id="Describe" name="Describe" class="layui-textarea">@Model.Project.Describe</textarea>
            </div>
        </div>
        <div class="layui-form-item">
            <label for="Picture" class="layui-form-label">
                <span class="x-red">*</span>线路图片
            </label>
            <div class="layui-upload">
                <button type="button" class="layui-btn" id="pictureUpload">上传图片</button>
                <div class="layui-upload-list">
                    <input type="hidden" name="Picture" id="Picture" value="@Model.Project.Picture" />
                    <img class="layui-upload-img" id="demo1" width="100" height="100" src="@Model.Project.Picture">
                    <p id="demoText"></p>
                </div>
            </div>
        </div>
        <div class="layui-form-item layui-form-text">
            <label for="Content" class="layui-form-label">
                线路详情
            </label>
            <div class="layui-input-block">
                <textarea placeholder="请输入内容" id="Content" name="Content" class="layui-textarea">@Model.Project.Content</textarea>
            </div>
        </div>
        <div class="layui-form-item">
            <button class="layui-btn" lay-filter="add" lay-submit>
                保存
            </button>
        </div>
    </form>
</div>



