@inject TravelApp.Timing.AppTimes AppTimes
@{
    ViewData["Title"] = "Index";
}
@section Scripts{
    <script src="~/view-resources/Views/Project/index.js" asp-append-version="true"></script>
}
<div class="layui-row">
    <form class="layui-form layui-form-pane">
        <div class="layui-form-item">
            <label for="username" class="layui-form-label">
                线路名称
            </label>
            <div class="layui-input-inline">
                <input class="layui-input" placeholder="线路名称" name="Name" id="Name">
            </div>
            <label for="username" class="layui-form-label">
                线路分类
            </label>
            <div class="layui-input-inline">
                <input type="text" id="CategoryId" lay-filter="tree" name="CategoryId" class="layui-input">
            </div>
            <label for="username" class="layui-form-label">
                线路状态
            </label>
            <div class="layui-input-inline">
                <select name="State" id="State">
                    <option value="0">全部</option>
                    <option value="1">正常</option>
                    <option value="-1">已删除</option>
                </select>
            </div>
            <label for="username" class="layui-form-label">
                开始时间
            </label>
            <div class="layui-input-inline">
                <input class="layui-input" placeholder="" name="StartTime" id="StartTime">
            </div>
            <label for="username" class="layui-form-label">
                结束时间
            </label>
            <div class="layui-input-inline">
                <input class="layui-input" placehol
                       der="" name="EndTime" id="EndTime">
            </div>
            <button class="layui-btn" lay-submit lay-filter="searchProject"><i class="layui-icon">&#xe615;</i></button>
        </div>
    </form>
</div>
<table class="layui-table" id="projectList" lay-filter="projectList"></table>

<script type="text/html" id="optbar">
    <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="detail">查看</a>
    <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
</script>



