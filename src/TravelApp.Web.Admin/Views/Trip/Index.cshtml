@inject TravelApp.Timing.AppTimes AppTimes
@{
    ViewData["Title"] = "Index";
}
@section Scripts{
    <script src="~/view-resources/Views/Trip/index.js" asp-append-version="true"></script>
}
<div class="layui-row">
</div>
<div class="layui-row">
    <button class="layui-btn" id="addproject">
        <i class="layui-icon">&#xe608;</i> 添加
    </button>
</div>
<table class="layui-table" id="projectList" lay-filter="projectList"></table>

<script type="text/html" id="stateTpl">
    <input type="checkbox" name="State" value="{{d.id}}" lay-skin="switch" lay-text="审核|未审核" lay-filter="state" {{ d.state == 1 ? 'checked' : '' }}>
</script>

<script type="text/html" id="isRecommendTpl">
    <input type="checkbox" name="IsRecommend" value="{{d.id}}" title="推荐" lay-filter="isRecommend" {{ d.isRecommend == true ? 'checked' : '' }}>
</script>


<script type="text/html" id="optbar">
    <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="detail">查看</a>
    <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
</script>



