@inject TravelApp.Timing.AppTimes AppTimes
@{
    ViewData["Title"] = "Index";
}
@section Scripts{
    <script src="~/view-resources/Views/Trip/index.js" asp-append-version="true"></script>
}
<div class="layui-row">
</div>
<div class="layui-row">
    <button class="layui-btn" id="addtrip">
        <i class="layui-icon">&#xe608;</i> 添加
    </button>
</div>
<table class="layui-table" id="tripList" lay-filter="tripList"></table>


<script type="text/html" id="statusTpl">
    <input type="checkbox" name="Status" value="{{d.id}}" lay-skin="switch" lay-text="审核|未审核"  lay-filter="status" {{ d.status == 1 ? 'checked' : '' }}>
</script>


<script type="text/html" id="optbar">
    <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="detail">查看</a>
    <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
</script>

